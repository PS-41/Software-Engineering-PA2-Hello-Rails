<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Title', movies_path(sort: 'title', direction: toggle_sort_direction('title')), data: { turbo: false } %></th>
      <th><%= link_to 'Rating', movies_path(sort: 'rating', direction: toggle_sort_direction('rating')), data: { turbo: false } %></th>
      <th><%= link_to 'Release Date', movies_path(sort: 'release_date', direction: toggle_sort_direction('release_date')), data: { turbo: false } %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date.strftime("%d-%b-%Y") %></td>
        <td>
          <%= link_to "Show this movie", movie %>
        </td>
      </tr>
    <% end %>
  </tbody>
  
  <tfoot>
    <tr>
      <td colspan="4">
        <%= link_to 'New Movie', new_movie_path %>
      </td>
    </tr>
  </tfoot>
</table>
