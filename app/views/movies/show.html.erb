<p class="notice"><%= notice %></p>

<div class="movie-card">
  <%= render @movie %>
</div>

<div class="action-links">
  <%= link_to "Edit this movie", edit_movie_path(@movie), class: "button" %> |
  <%= link_to "Back to movies", movies_path, class: "button" %>
  
  <%= button_to "Destroy this movie", @movie, method: :delete, class: "button" %>
</div>
